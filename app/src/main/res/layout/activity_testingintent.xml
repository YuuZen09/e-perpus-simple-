<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testingintent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/containertombol">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="200dp"
                    android:layout_height="260dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/detailJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cover"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Judul Buku"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailPenulis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailJudul"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Penulis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailPenulis"
                    android:id="@id/detailtahun"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Tahun"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailtahun"
                    android:id="@id/detailPenerbit"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Penerbit"/>

                <TextView
                    android:id="@+id/sinopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailPenerbit"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Sinopsis" />

            </RelativeLayout>

        </ScrollView>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:id="@+id/containertombol">

        <Button
            android:id="@+id/btnpinjamdownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pinjam/download"
            android:visibility="visible"/>

        <Button
            android:layout_width="156dp"
            android:id="@+id/btnbaca"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/btnpinjamdownload"
            android:text="BACA" />
    </RelativeLayout>

</RelativeLayout>